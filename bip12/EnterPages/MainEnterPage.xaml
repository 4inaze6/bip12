<Page x:Class="bip12.EnterPages.MainEnterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bip12.EnterPages"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="470"
      Title="MainEnterPage">

    <StackPanel Orientation="Horizontal">
        <Button x:Name="AuthorizationButton" Content="Авторизоваться" Click="AuthorizationButton_Click" Width="200" Height="100" Margin="5" FontSize="20"/>
        <Button x:Name="RegistrationButton" Content="Зарегистрироваться" Click="RegistrationButton_Click" Width="250" Height="100" Margin="5" FontSize="20"/>
    </StackPanel>
</Page>
