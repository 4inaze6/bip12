<Page x:Class="bip12.EnterPages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bip12.EnterPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="RegistrationPage">

    <StackPanel>
        <Label Content="Логин:"/>
        <TextBox x:Name="LoginTextBox" Width="500" Text="{Binding Login, Mode=TwoWay}"/>
        <Label Content="Пароль:"/>
        <PasswordBox x:Name="PasswordBox" Width="500"/>
        <Label Content="Подтверждение пароля:"/>
        <PasswordBox x:Name="ConfirmationPasswordBox" Width="500"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BackButton" Content="&lt;===" FontSize="20" Height="30" Width="75" Margin="5" Click="BackButton_Click"/>
            <Button x:Name="RegistrationButton" HorizontalAlignment="Center" Height="30" Width="150" Content="Зарегистрироваться" Margin="5" Click="RegistrationButton_Click" IsDefault="True"/>
        </StackPanel>
    </StackPanel>
</Page>
